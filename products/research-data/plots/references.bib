	author = {Mähr, Moritz and Schnegg, Noëlle},
	month = jun,
	year = {2024},
	keywords = {Stadt.Geschichte.Basel, Code of Conduct, Diskriminierungsfreie Metadaten, Dublin Core, FAIR-Prinzipien, GenderOpen Schlagwortindex, Historische Quellen und Forschungsdaten, Open Research Data},
